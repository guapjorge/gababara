<section class="container2">
    <div class="row">
        {{#each furniture as |item|}}
        <div class="col s12 m7">
            <div class="card">
                <div class="card-image">
                    <img src="{{item.image}}">
                    <span class="card-title">{{item.furnitureName}}</span>
                </div>
                <div class="card-content">
                    <p>${{item.furniturePrice}}</p>
                </div>
                <div class="card-action">
                    <a href="#">This is a link</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>

    <div class="col s12">
        <button id="checkout-btn" class="btn">Checkout</button>
    </div>

</section>